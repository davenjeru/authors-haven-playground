{
  "extends": "airbnb",
  "plugins": [
    "jest",
    "react",
    "import",
    "jsx-a11y"
  ],
  "parser": "babel-eslint",
  "ecmaFeatures": {
    "modules": true,
    "spread": true,
    "restParams": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "allowImportExportEverywhere": true
  },
  "rules": {
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "func-names": [
      "error",
      "never"
    ],
    "import/extensions": [
      "error",
      {
        "js": "never",
        "css": "always",
        "jpg": "always",
        "png": "always",
        "jpeg": "always",
        "svg": "always"
      }
    ],
    "jest/no-disabled-tests": "warn",
    "jest/no-focused-tests": "error",
    "jest/no-identical-title": "error",
    "jest/prefer-to-have-length": "warn",
    "jest/valid-expect": "error",
    "function-paren-newline": "off"
  },
  "env": {
    "jest/globals": true,
    "browser": true,
    "node": true,
    "es6" : true
  }
}
